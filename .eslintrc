{
  "env": {
    "node": true
  },
  "rules": {
    "block-scoped-var": 2,
    "brace-style": [2, "stroustrup", { "allowSingleLine": true }],
    "camelcase": 1,
    "curly": 0,
    "eol-last": 2,
    "eqeqeq": [2, "smart"],
    "max-depth": [1, 4],
    "max-statements": [1, 18],
    "max-len": [1, 100],
    "new-cap": 1,
    "no-extend-native": 2,
    "no-mixed-spaces-and-tabs": 2,
    "no-trailing-spaces": 2,
    "no-use-before-define": [2, "nofunc"],
    "no-unused-vars": 1,
    "no-underscore-dangle": 0,
    "no-shadow": 1,
    "quotes": [2, "single", "avoid-escape"],
    "semi": [2, "always"],
    "space-after-keywords": [2, "always"],
    "space-in-brackets": 0,
    "space-unary-ops": 0
  }
}
